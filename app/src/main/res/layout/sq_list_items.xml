<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22dp">

        <TextView
            android:id="@+id/magnitude_txt"
            android:layout_width="73dp"
            android:layout_height="65dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="5.0" />

        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="1dp"
            android:src="@drawable/ic_flecha_d" />

        <TextView
            android:id="@+id/nombre_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/arrow_img"
            android:layout_toEndOf="@id/magnitude_txt"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="Nombre" />

        <TextView
            android:id="@+id/Apellido_txt"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombre_txt"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@id/arrow_img"
            android:layout_toEndOf="@+id/magnitude_txt"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="Apellido" />

    </RelativeLayout>
</layout>